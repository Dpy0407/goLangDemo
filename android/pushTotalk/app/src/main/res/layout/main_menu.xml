<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:paddingHorizontal="@dimen/mid_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="-3dp"
        android:layout_width="match_parent"
        android:layout_height="15dp">
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_width="20dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="-10dp"
                android:background="@drawable/ic_trangle_up"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:background="@drawable/pop_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height">

            <TextView
                android:id="@+id/connect_settiong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/connet_setting"
                android:textAlignment="center"
                android:textColor="@color/popTextColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/base_margin"
            android:background="@color/popDivColor" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/menu_item_height">

            <TextView
                android:id="@+id/clear_all"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/clear_all"
                android:textAlignment="center"
                android:textColor="@color/popTextColor" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>