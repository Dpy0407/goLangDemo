<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <TextView
        android:id="@+id/text_time"
        android:textSize="@dimen/time_text_size"
        android:textColor="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="@dimen/message_width"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@color/empty"
            >

            <LinearLayout
                android:layout_width="@dimen/message_height"
                android:layout_height="@dimen/message_height"
                android:layout_gravity="center"
                android:background="@drawable/ic_iot" />

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="-3dp"
                android:background="@drawable/triangle_left" />

            <LinearLayout
                android:id="@+id/play_view"
                android:background="@drawable/chart_pop_left"
                android:layout_width="0dp"
                android:layout_height="@dimen/message_height"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <LinearLayout
                    android:id="@+id/speaker"
                    android:layout_gravity="center"
                    android:layout_marginLeft="12dp"
                    android:layout_width="@dimen/voice_size"
                    android:layout_height="@dimen/voice_size"
                    android:background="@drawable/ic_voice_2"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/text_duration"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <RelativeLayout
                android:layout_marginLeft="-5dp"
                android:layout_width="15dp"
                android:layout_height="45dp">
                <ImageView
                    android:id="@+id/status"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/circle_red"
                    />
            </RelativeLayout>



        </LinearLayout>

    </RelativeLayout>


</LinearLayout>