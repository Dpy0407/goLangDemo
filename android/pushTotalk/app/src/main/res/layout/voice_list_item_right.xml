<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/text_time"
        android:textSize="@dimen/time_text_size"
        android:textColor="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="@dimen/message_width"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@color/empty">

            <LinearLayout
                android:layout_width="15dp"
                android:layout_height="45dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/status"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:background="@drawable/ic_warning"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/play_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/message_height"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/chart_pop_right"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_duration"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:id="@+id/speaker"
                    android:layout_width="@dimen/voice_size"
                    android:layout_height="@dimen/voice_size"
                    android:layout_gravity="center"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/ic_voice_2"
                    android:orientation="horizontal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginRight="-3dp"
                android:background="@drawable/triangle_right" />

            <LinearLayout
                android:layout_width="@dimen/message_height"
                android:layout_height="@dimen/message_height"
                android:layout_gravity="center"
                android:background="@drawable/ic_mobile" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>